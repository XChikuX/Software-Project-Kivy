<RootWidget>:
    padding: 5
    orientation: 'horizontal'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        ScreenManager:
            size_hint: 1, .8
            id: _screen_manager
            Screen:
                name: 'Login_Screen'
                BoxLayout:
                    
                    orientation: 'vertical'
                    size_hint: 1,0.9
                    GridLayout:
                        padding: 50
                        size_hint: 1, 0.9
                        rows: 2
                        cols: 2
                        Label:
                            text:'User Name'
                            font_size:30
                        TextInput:
                            padding: 50
                            id: usn
                            multiline: False
                            font_size:30
                        Label:
                            text:'Password'
                            font_size:30
                        TextInput:
                            padding: 50
                            id: psw
                            password: True
                            multiline: False
                            font_size: 30
                    
                
                
                ########
            Screen:
                name: 'screen1'
                BoxLayout:
                    orientation: 'horizontal'
                    ScrollView:
                        size_hint: 0.6, 0.9
                        #pos: root.pos
                        
                        Label:
                            
                            
                            
                            id: Scrollable
                            text: "Reading Comprehension \n\n" + root.rc1
                            font_size: 25
                            
                            size_hint_y: None
                            
                           ## text_size: self.width/2, None
                            width: self.texture_size[1]
                            height: self.texture_size[1]
                    
                      ##  pos = root.x + 0.5*root.width
                       ## size = root.width*0.5, root.height*0.8
                    BoxLayout:
                        orientation: 'vertical'
                    
                        size_hint: 0.4, 1
                        BoxLayout:
                            size_hint: 1, 0.2
                            Label:
                                
                                font_size: 28
                                text: root.text1
                            
    
                        GridLayout:
                            #pos_hint: {'center_x': 0.8, 'center_y': 0.2}
                            size_hint: 1, 0.7
                            rows: 4
                            cols: 2
                            minimum_width: 5
                            col_default_width: 10
                          #  size: (root.width*0.5, root.height*0.2)
                            CheckBox:
                                
                                id: 'Option1'
                                group: 'group1'
                                text: "Option1"
                                
                                #active: True
                                on_active: root.write_to_var("A")
                            
                            Label:
                                
                                text_size: self.size
                                halign: 'left'
                                text: root.B[0]
                                font_size: 20
                            CheckBox:
                                id: 'Option2'
                                group: 'group1'
                                text: "Option2"
                                
                                on_active: root.write_to_var("B")
                            Label:
                                text_size: self.size
                                halign: 'left'
                                text: root.B[1]
                                font_size: 20
                            CheckBox:
                                
                                id: 'Option1'
                                group: 'group1'
                                text: "Option1"
                                
                                #active: True
                                on_active: root.write_to_var("C")
                            
                            Label:
                                text_size: self.size
                                halign: 'left'
                                text: root.B[2]
                                font_size: 20
                            CheckBox:
                                
                                id: 'Option1'
                                group: 'group1'
                                text: "Option1"
                                
                                #active: True
                                on_active: root.write_to_var("D") 
                                           
                            
                            Label:
                                text_size: self.size
                                halign: 'left'
                                text: root.B[3]
                                font_size: 20
            Screen:
                name: 'screen2'
                BoxLayout:
                    orientation: 'horizontal'
                    ScrollView:
                        size_hint: 0.6, 0.9
                        #pos: root.pos
                        
                        Label:
                            
                            
                            
                            id: Scrollable
                            text: "Reading Comprehension \n\n" + root.rc2
                            font_size: 25
                            
                            size_hint_y: None
                            
                           ## text_size: self.width/2, None
                            width: self.texture_size[1]
                            height: self.texture_size[1]
                    
                      ##  pos = root.x + 0.5*root.width
                       ## size = root.width*0.5, root.height*0.8
                    BoxLayout:
                        orientation: 'vertical'
                    
                        size_hint: 0.4, 1
                        BoxLayout:
                            size_hint: 1, 0.2
                            Label:
                                
                                font_size: 28
                                text: 'The phrase "Resting on" in line 13 is closest in meaning to'
                            
    
                        GridLayout:
                            size_hint: 1, 0.7
                            rows: 4
                            cols: 2
                            minimum_width: 5
                            col_default_width: 10
                          #  size: (root.width*0.5, root.height*0.2)
                            CheckBox:
                                
                                id: 'Option1'
                                group: 'group1'
                                text: "Option1"
                                
                                #active: True
                                on_active: root.write_to_var("A")
                            
                            Label:
                                
                                text_size: self.size
                                halign: 'left'
                                text: 'A. Consisting of'
                                font_size: 20
                            CheckBox:
                                id: 'Option2'
                                group: 'group1'
                                text: "Option2"
                                
                                on_active: root.write_to_var("B")
                            Label:
                                text_size: self.size
                                halign: 'left'
                                text: 'B. Supported by'
                                font_size: 20
                            CheckBox:
                                
                                id: 'Option1'
                                group: 'group1'
                                text: "Option1"
                                
                                #active: True
                                on_active: root.write_to_var("C")
                            
                            Label:
                                text_size: self.size
                                halign: 'left'
                                text: 'C. Passing under'
                                font_size: 20
                            CheckBox:
                                
                                id: 'Option1'
                                group: 'group1'
                                text: "Option1"
                                
                                #active: True
                                on_active: root.write_to_var("D") 
                                           
                            
                            Label:
                                text_size: self.size
                                halign: 'left'
                                text: 'D. Protected with'
                                font_size: 20
            Screen:
                name: 'screen3'
                BoxLayout:
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint: 1, 0.3
                        Label:
                            text: root.A[0]
                            font_size: 20
                    BoxLayout:
                        size_hint: 1, 0.5
                        orientation: 'horizontal'
                        BoxLayout:
                            padding: 50
                            orientation: 'vertical'
                            CheckBox:
                                
                                id: 'Option1'
                                group: 'group1'
                                size_hint: None, None
                                pos_hint_x: 0.5
                                on_active: root.write_to_var("A")
                                
                            CheckBox:
                                
                                id: 'Option2'
                                group: 'group1'
                                size_hint: None, None
                                on_active: root.write_to_var("B")
                                
                            CheckBox:
                                
                                id: 'Option3'
                                group: 'group1'
                                size_hint: None, None
                                on_active: root.write_to_var("C")
                                
                            
                        BoxLayout:
                            padding: 50
                            orientation: 'vertical'
                            Label:
                                halign: 'left'
                                text_size: self.size
                                id: 'Label1'
                                size_hint: None,None
                                text: root.A[1]
                                font_size: 20
                            Label:
                                halign: 'left'
                                text_size: self.size
                                id: 'Label2'
                                size_hint: None,None
                                text: root.A[2]
                                font_size: 20
                            Label:
                                halign: 'left'
                                text_size: self.size
                                id: 'Label3'
                                size_hint: None,None
                                text: root.A[3]
                                font_size: 20
            Screen:
                name: 'screen4'
                BoxLayout:
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint: 1, 0.3
                        Label:
                            text: root.A[4]
                            font_size: 20
                    BoxLayout:
                        size_hint: 1, 0.5
                        orientation: 'horizontal'
                        BoxLayout:
                            padding: 50
                            orientation: 'vertical'
                            CheckBox:
                                
                                id: 'Option1'
                                group: 'group1'
                                size_hint: None, None
                                pos_hint_x: 0.5
                                on_active: root.write_to_var("A")
                                
                            CheckBox:
                                
                                id: 'Option2'
                                group: 'group1'
                                size_hint: None, None
                                on_active: root.write_to_var("B")
                                
                            CheckBox:
                                
                                id: 'Option3'
                                group: 'group1'
                                size_hint: None, None
                                on_active: root.write_to_var("C")
                                
                            
                        BoxLayout:
                            padding: 50
                            orientation: 'vertical'
                            Label:
                                halign: 'left'
                                text_size: self.size
                                id: 'Label1'
                                size_hint: None,None
                                text: root.A[5]
                                font_size: 20
                            Label:
                                halign: 'left'
                                text_size: self.size
                                id: 'Label2'
                                size_hint: None,None
                                text: root.A[6]
                                font_size: 20
                            Label:
                                halign: 'left'
                                text_size: self.size
                                id: 'Label3'
                                size_hint: None,None
                                text: root.A[7]
                                font_size: 20                      
                                
            Screen:
                name: 'score'
                Label:
                    text: str(root.D)
                                
                                
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'        
        GridLayout:
            rows:3
            cols:2
            padding: 10
            #orientation: 'horizontal'
            size_hint: 1, .2
            Button:
                text: 'Submit'
                on_press: root.Submit()
            Button:
                text: 'Go to Screen 2'
                on_press: _screen_manager.current = 'screen2'
            Button:
                text: 'Go to Screen 3'
                on_press: _screen_manager.current = 'screen3'
            Button:
                text: 'Go to Screen 4'
                on_press: _screen_manager.current = 'screen4'
            Button:
                text: 'Login'
                on_press:
                    root.login(usn.text,psw.text)
                    _screen_manager.current = 'screen1'
            Button:
                text: 'Score!'
                on_press:
                    root.score()
                    _screen_manager.current = 'score'
    